<odoo>
  <data>

    <record id="project_task_inherit" model="ir.ui.view">
      <field name="name">project.task.inherit</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="project.view_task_form2"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='partner_id']" position="after">
              <field name="complexity" string='Complexity'/>
              <field name="skill_level" string='Skill-level'/>
              <field name="urgency"/>
            </xpath>
      </field>
    </record>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="first_module.list">
      <field name="name">first_module list</field>
      <field name="model">first_module.first_module</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="lastname"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="birth_date"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="first_module.action_window">
      <field name="name">first_module WindoW</field>
      <field name="res_model">first_module.first_module</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="first_module.action_server">
      <field name="name">first_module server</field>
      <field name="model_id" ref="model_first_module_first_module"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->

    <menuitem name="First_module" id="first_module.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Menu 1" id="first_module.menu_1" parent="first_module.menu_root"/>
    <menuitem name="Menu 2" id="first_module.menu_2" parent="first_module.menu_root"/>

    <!-- actions -->
    <menuitem name="List" id="first_module.menu_1_list" parent="first_module.menu_1"
              action="first_module.action_window"/>
    <menuitem name="Server to list" id="first_module" parent="first_module.menu_2"
              action="first_module.action_server"/>
  </data>
</odoo>
